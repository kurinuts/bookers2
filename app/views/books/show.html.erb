
<div class="container">
  <div class="row">
<div class="col-md-3">
  <h1>User info</h1>
<table class="table table-striped">
  <tr><th><%= image_tag @user.get_profile_image(50,50) %></th><td> </td></tr>
  <tr><th>name</th><td><%= @user.name %></td></tr>
  <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
  </table>
  
  
  <%= link_to edit_user_path(@user), class: "btn btn-secondary btn-block" do %>
    <i class="fas fa-user-cog fa-lg"></i>
  <% end %>
  



  <h1>New book</h1>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errorが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>



  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">


  <h1>Book detail</h1>
  <table class="table table-striped">
  <thead>
    <tr>
    <th>user_image</th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
    </tr>

    <tr>
    <td>
      <%= link_to user_path(@user) do %>
      <%= image_tag @user.get_profile_image(50,50) %>
    <% end %><br>
    <%= link_to user_path(@user) do %><%= @user.name %><% end %>
    </td>
    <%= form_with model: @book do |f| %>
    <td><%= @post_book.title %></td>
    <td><%= @post_book.body %></td>
    <td><% if @post_book.user == current_user %><%= link_to "Edit", edit_book_path(@post_book), class: "btn btn-success btn-block" %><% end %></td>
    <td><% if @post_book.user == current_user %><%= link_to "Destroy", book_path(@post_book), method: :delete, class: "btn btn-danger btn-block" %><% end %></td>
    <% end %>
    </tr>
    </thead>
    </div>
    </table>
    </div>
    </div>
    </div>

