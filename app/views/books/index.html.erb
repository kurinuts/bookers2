<html>
  <head></head>
  <body>
  <header></header>
  <main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>User info</h1>
      <table class="table table-striped">
  <tr><th>image</th><td> </td></tr>
  <tr><th>name</th><td><%= @user.name %></td></tr>
  <tr><th>introduction</th><td><%= @user.email %></td></tr>
</table>
<%= link_to "Edit", edit_user_path(@user) %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create' %>
  <% end %>
    </div>
    <div class="col-lg-8">

    <div>
      <h1>Books</h1>
    <table class="table table-striped">
      <thead>
          <th>user</th>
          <th>Title</th>
          <th>Opinion</th>
      </thead>

      <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
        <% @books.each do |book| %>
        <tr>
        <td><%= link_to "user", user_path(@books) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </tr>
        <% end %>

    </table>
    </div>
    </div>
    </div>
  </div>
  </main>
  <footer></footer>
  </body>

</html>





