    <div class="col-lg-4">
      <h1>User info</h1>
<table class="table table-striped">
  <tr><th>image</th><td> </td></tr>
  <tr><th>name</th><td><%= @user.name %></td></tr>
  <tr><th>introduction</th><td><%= @user.email %></td></tr>
